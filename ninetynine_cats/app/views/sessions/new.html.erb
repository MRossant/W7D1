<h2>Login</h2>

<form action="<%= session_url %>" method="POST">
    <label>Username:
        <input type="text" name="user[user_name]" value="<%= @user.user_name %>">
    </label>

    <label>Password:
        <input type="password" name="user[password]" value="">
    </label>

    <input type="submit" value="Login">
</form>